general {
        colors = true
        # color_good = "#50FA7B"
        color_good = "#448888"
        color_degraded = "#F1FA8C"
        color_bad = "#FF5555"
        interval = 5
        output_format = "i3bar"
}

# order += "ipv6"  # -3
# order += "ethernet eth0"  # -2
# order += "run_watch D"  # -1
order += "wireless wlan0"  # 0
order += "disk /home"  # 1
order += "battery 0"  # 2
order += "cpu_usage"  # 3
order += "cpu_temperature 0"  # 4
order += "memory"  # 5
order += "memory"  # 6 -- swap!!!
order += "load"  # 7
order += "volume master"  # 8
order += "tztime local"  # 9
order += "tztime berlin"  # 10

disk "/home" {
        format = "%free"
}

wireless wlan0 {
        format_up = "W: (%quality @ %essid, %bitrate) %ip"
        format_down = "W: down"
        format_quality = "%2d%s"
}

